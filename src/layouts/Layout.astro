---
import MobileNav from "../components/MobileNav.tsx";
import logo from "../LOGOblack1.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- make the navbar stay in place -->
    <nav
      class="flex justify-between items-center pt-6 pb-3 font-medium px-8 md:px-16 lg:px-32 fixed top-0 w-full bg-stone-100 bg-opacity-90 z-10"
    >
      <a href="/">
        <img src={logo.src} class="h-10" alt="logo campingpark" />
      </a>
      <h1 class="lg:hidden">{title}</h1>
      <ul class="justify-end gap-7 text-sm hidden lg:flex">
        <li>
          <a href="/">Startseite</a>
        </li>
        <li>
          <a href="/Gastronomie">Gastronomie</a>
        </li>
        <li>
          <a href="/Countryfest">Countryfest</a>
        </li>
        <li>
          <a href="Preise">Preise</a>
        </li>
        <li>
          <a href="/Service">Service</a>
        </li>
        <li>
          <a href="/Kontakt">Kontakt</a>
        </li>
        <li>
          <a href="/Impressum">Impressum</a>
        </li>
      </ul>
      <MobileNav client:load />
    </nav>
    <div class="mt-28">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #f8f8f8;
    /* background-size: 224px; */
    background-image: url("../bg.jpg");
    background-size: cover;
    /* make the picture stay in place */
    background-attachment: fixed;
  }
</style>
