---
import Navbar from "../components/Navigation.astro";

interface Props {
  title: string;
  currentPage: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-black" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Campingpark Bergwiesen" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg"></div>
    <Navbar />
    <slot />
  </body>
