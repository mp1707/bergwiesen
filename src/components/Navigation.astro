---
import logo from "../assets/logoS.png";

function isActive(path: string) {
  const currentPath =
    Astro.url.pathname.endsWith("/") && Astro.url.pathname.length > 1
      ? Astro.url.pathname.slice(0, -1)
      : Astro.url.pathname;
  return currentPath === path ? "active rounded-full" : " rounded-full";
}
---

<div class="drawer drawer-end">
  <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col items-center">
    <!-- Page content here -->
    <div
      class="navbar bg-base-100 lg:bg-opacity-50 sticky top-0 lg:top-5 lg:rounded-full lg:container mx-auto backdrop-blur-md"
      style="z-index: 10;"
    >
      <div class="navbar-start">
        <a class="btn btn-ghost text-xl" href="/"
          ><img src={logo.src} class="max-h-10 w-auto" alt="logo campingpark" /></a
        >
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1 gap-1">
          <li>
            <a href="/" class={isActive("/")}>Startseite</a>
          </li>
          <li>
            <a href="/gastronomie" class={isActive("/gastronomie")}>Gastronomie</a>
          </li>
          <li>
            <a href="/countryfest" class={isActive("/countryfest")}>Countryfest</a>
          </li>
          <li>
            <a href="/preise" class={isActive("/preise")}>Preise</a>
          </li>
          <li>
            <a href="/service" class={isActive("/service")}>Service</a>
          </li>
          <li>
            <a href="/kontakt" class={isActive("/kontakt")}>Kontakt</a>
          </li>
          <li>
            <a href="/impressum" class={isActive("/impressum")}>Impressum</a>
          </li>
        </ul>
      </div>
      <div class="navbar-end">
        <label for="my-drawer-4" class="drawer-button btn btn-ghost lg:hidden">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h8m-8 6h16"></path></svg
          >
        </label>
      </div>
    </div>
    <slot />
  </div>
  <div class="drawer-side" style="z-index: 20;">
    <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul
      class="menu bg-base-200 bg-opacity-75 backdrop-blur-md text-base-content min-h-full w-80 p-4 gap-2"
    >
      <!-- Sidebar content here -->
      <li>
        <a href="/" class={isActive("/")}>Startseite</a>
      </li>
      <li>
        <a href="/gastronomie" class={isActive("/gastronomie")}>Gastronomie</a>
      </li>
      <li>
        <a href="/countryfest" class={isActive("/countryfest")}>Countryfest</a>
      </li>
      <li>
        <a href="/preise" class={isActive("/preise")}>Preise</a>
      </li>
      <li>
        <a href="/service" class={isActive("/service")}>Service</a>
      </li>
      <li>
        <a href="/kontakt" class={isActive("/kontakt")}>Kontakt</a>
      </li>
      <li>
        <a href="/impressum" class={isActive("/impressum")}>Impressum</a>
      </li>
    </ul>
  </div>
</div>
