---
import logo from "../assets/logoS.png";

function isActive(path: string) {
  const currentPath =
    Astro.url.pathname.endsWith("/") && Astro.url.pathname.length > 1
      ? Astro.url.pathname.slice(0, -1)
      : Astro.url.pathname;
  return currentPath === path ? "active" : "";
}
