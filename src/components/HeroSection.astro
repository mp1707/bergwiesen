---
interface Props {
  reverse?: boolean;
  heading?: string;
  image: string;
}
const { reverse, heading, image }: Props = Astro.props;
---

<div class="hero">
  <div class={`p-0 flex flex-col lg:flex-row${reverse ? "-reverse" : ""} lg:min-h-96 lg:gap-10`}>
    <img src={image} class="h-full shadow-2xl max-h-96" />
    <div class="flex flex-col justify-center p-6 gap-6 bg-base-100 lg:opacity-60 min-h-96 shadow-2xl">
      <h1 class="text-2xl lg:text-5xl font-bold">{heading}</h1>
      <p class="text-content lg:text-xl">
        <slot />
      </p>
    </div>
  </div>
</div>
